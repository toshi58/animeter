<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to "Animeter", "/", class: "header-logo" %>
    <%= form_with url: search_animes_path, local: true, method: :get, class: "search-form" do |f| %>
      <%= f.text_field :keyword, placeholder: 'アニメのタイトルから探す', class: 'input-box' %>
      <%= button_tag type: 'submit', class: 'search-button' do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
    <% if user_signed_in? %>
      <div class='header-list'>
        <%= link_to 'マイページ', user_path(current_user.id), class: "my-page" %>
      </div>
      <div class='header-list'>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
      </div>
    <% else %>
      <div class='header-list'>
        <%= link_to 'ログイン', new_user_session_path, class: "login" %>
      </div>
      <div class='header-list'>
        <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %>
      </div>
    <% end %>
  </div>
</header>